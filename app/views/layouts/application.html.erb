  <body>
    <div id="container">
      <header class="top">

      </header>
      <header class="main">
        <nav id="left-access">
          <a href="/">Hjem</a>
          <% if user_signed_in? %>
            <a href="/profile">Profil</a>
          <% end %>
          <a href="/browse">Bla i jobber</a>
        </nav>
        <nav id="right-access">
        <% if user_signed_in? %>
          Logget inn som <strong><%= current_user.email %></strong>
          <a href="/users/sign_out" id="signout" class="awesome small red" >Logg ut</a> 
          <% else %>
          <a href="/users/sign_in" class="signin-button" >Logg inn</a> eller 
          <a href="/users/sign_up" class="signup-button awesome small blue">Opprett konto</a>
          <% end %>
        </nav>
      </header>

      <div id="main" role="main">
          <%= yield %>
      </div>

      <footer>
        &nbsp;
      </footer>
    </div>

  </body>
